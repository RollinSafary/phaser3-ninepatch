{
  "compilerOptions": {
    "outDir": "lib",
    "target": "es5",
    "lib": ["es7", "dom"],
    "sourceMap": false,
    "inlineSources": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "isolatedModules": false,
    "allowSyntheticDefaultImports": true
  },
  "include": ["./src/**/*.ts"],
  "files": ["./definitions/phaser.d.ts"]
}
